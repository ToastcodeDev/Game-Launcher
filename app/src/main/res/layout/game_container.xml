<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_normal"
    android:background="@drawable/item_background"
    android:padding="@dimen/padding_normal">

    <ImageView
        android:id="@+id/Game_Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/margin_normal"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_game_unknown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Game_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/loading_hint"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/Game_Icon"
        app:layout_constraintEnd_toStartOf="@id/Open_Game"
        app:layout_constraintStart_toEndOf="@id/Game_Icon"
        app:layout_constraintTop_toTopOf="@id/Game_Icon"
        tools:text="Game Title" />

    <ImageView
        android:id="@+id/Open_Game"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="@dimen/margin_normal"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_start_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>