<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@drawable/frame_background"
     android:layout_margin="8dp"
     tools:context=".MainActivity">

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:clickable="true"
         android:fillViewport="true"
         android:layout_margin="0dp"
         android:paddingBottom="0dp">

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:padding="8dp"
             android:orientation="vertical"
             android:paddingBottom="5dp">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:gravity="left|top"
                 android:padding="8dp"
                 android:orientation="vertical"
                 android:layout_weight="1"
                 android:id="@+id/Settings_Panel"
                 android:layout_gravity="left|top">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="8dp"
                     android:orientation="horizontal"
                     android:id="@+id/Tool_Header">

                    <ImageView
                         android:layout_height="match_parent"
                         android:layout_width="30dp"
                         android:src="@drawable/ic_back"
                         android:scaleType="fitCenter"
                         android:layout_marginRight="5dp"
                         android:id="@+id/Close_Btn"
                         android:layout_gravity="left|center_vertical" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:gravity="left|top"
                         android:padding="8dp"
                         android:textSize="20sp"
                         android:textColor="#FFFFFF"
                         android:singleLine="true"
                         android:id="@+id/Settings_Title"
                         android:text="@string/settings"
                         android:textStyle="bold"
                         android:layout_gravity="left|top" />

                </LinearLayout>

                <LinearLayout
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:background="@drawable/rounded_background"
                     android:gravity="left|top"
                     android:padding="8dp"
                     android:orientation="vertical"
                     android:layout_weight="1"
                     android:id="@+id/Settings_View"
                     android:layout_gravity="left|top">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:layout_marginBottom="0dp"
                         android:paddingBottom="8dp"
                         android:paddingLeft="8dp"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:paddingTop="10dp"
                         android:id="@+id/General_SubTitle"
                         android:text="@string/appearance_subtitle" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="8dp"
                         android:textSize="16sp"
                         android:layout_marginLeft="5dp"
                         android:textColor="#FFFFFF"
                         android:layout_gravity="left|center_vertical"
                         android:gravity="left|top"
                         android:layout_marginRight="5dp"
                         android:checked="false"
                         android:id="@+id/Htime_switch"
                         android:text="@string/switch_hide_time"
                         android:textStyle="bold" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:layout_marginBottom="0dp"
                         android:paddingBottom="0dp"
                         android:paddingLeft="8dp"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:paddingTop="20dp"
                         android:id="@+id/Data_SubTitle"
                         android:text="@string/data_subtitle" />

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:gravity="left|top"
                         android:orientation="horizontal">

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:padding="8dp"
                             android:textSize="16sp"
                             android:layout_marginLeft="5dp"
                             android:textColor="#FFFFFF"
                             android:layout_gravity="left|center_vertical"
                             android:gravity="left|top"
                             android:layout_marginRight="5dp"
                             android:layout_weight="1"
                             android:id="@+id/clear_time_text"
                             android:text="@string/txt_clear_time"
                             android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:padding="8dp"
                             android:textSize="16sp"
                             android:layout_marginLeft="20dp"
                             android:textColor="#FFFFFF"
                             android:layout_gravity="right|center"
                             android:gravity="center"
                             android:scaleX="0.8"
                             android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                             android:scaleY="0.8"
                             app:cornerRadius="60dp"
                             android:layout_marginRight="5dp"
                             style="@style/Widget.MaterialComponents.Button"
                             android:id="@+id/clear_btn"
                             android:text="@string/clear_time_btn"
                             android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>