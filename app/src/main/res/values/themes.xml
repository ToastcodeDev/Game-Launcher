<resources>
    <style name="NoStatusBar" parent="MDynamic">
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="FullScreen" parent="Default">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:dropDownHorizontalOffset">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>